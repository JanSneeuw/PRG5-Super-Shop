@model Contact

@{
    ViewBag.Title = "Show contact info";
}

<h2>@Model.ID's info</h2>

<div class="row">
    <div class="card">
        <div class="card-body">
            <div class="card-title">@Model.Title</div>
            <div class="row">
                <h4>About Hero: </h4>
                <p>@Model.Hero.Name</p>
            </div>
            <div class="row">
                <h4>Email:</h4>
                <p>@Model.Email</p>
            </div>
            <div class="row">
                <h4>Message: </h4>
                <p>@Model.Message</p>
            </div>
        </div>
    </div>
</div>